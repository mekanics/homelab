apiVersion: v1
kind: ConfigMap
metadata:
  name: coredns
  namespace: kube-system
data:
  Corefile: |
    .:53 {
        errors
        health {
           lameduck 5s
        }
        ready
        # Kubernetes DNS plugin - handles cluster.local resolution
        kubernetes cluster.local in-addr.arpa ip6.arpa {
           pods insecure
           fallthrough in-addr.arpa ip6.arpa
           ttl 30
        }
        # Prometheus metrics
        prometheus :9153
        # Forward external DNS queries to upstream
        forward . /etc/resolv.conf {
           max_concurrent 1000
        }
        # DNS cache
        cache 30
        # Prevent DNS loops
        loop
        # Auto-reload configuration
        reload
        # Load balance between upstream servers
        loadbalance
    }
