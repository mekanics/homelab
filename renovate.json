{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:recommended"],
	"regexManagers": [
		{
			"fileMatch": ["\\.(ya?ml)$"],
			"matchStrings": [
				"# ?renovate datasource=(?<datasource>.+?) depName=(?<depName>.+)\\n.+: [\"']?(?<currentValue>.+?)[\"']?\\n"
			]
		}
	],
	"timezone": "Europe/Zurich",
	"schedule": ["before 4pm every weekday"]
}
